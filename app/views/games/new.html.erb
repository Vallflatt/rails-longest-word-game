
<h1>New Game</h1>
<div class="letters-container">
  <% @letters.each do |letter| %>
    <div class="letters">
      <%= letter %>
    </div>
  <% end %>
</div>

<div class="form-container">
  <form action="/score" method="POST" data-turbo="false">
    <div class="mb-3">
      <label for="answer">What is the longest word you can find?</label>
      <div class="input-group">
        <input type="text" class="form-control" name="answer" id="answer">
        <input type="submit" class="btn btn-outline-secondary" value="Play" >
      </div>
    </div>

    <input type="hidden" name="letters" value="<%= @letters.join %>">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>

</div>
